@model IEnumerable<InAndOut.Models.Expense>

<div class="container" p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary text-white" asp-area="" asp-controller="Expenses" asp-action="Create">Create new Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Expense Amount
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="22">@item.Id</td>
                    <td width="22%">@item.ExpenseName</td>
                    <td width="22%">@item.ExpenseAmount</td>
                    <td width="34%">
                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-primary text-white" asp-area="" asp-controller="Expenses" asp-action="Update" asp-route-Id="@item.Id" mx-5>Update</a>
                            <a class="btn btn-danger text-white" asp-area="" asp-controller="Expenses" asp-action="Delete" asp-route-Id="@item.Id" mx-5>Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items Created Yet</p>
    }
</div>
